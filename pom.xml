<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <groupId>org.wso2</groupId>
        <artifactId>wso2</artifactId>
        <version>5</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>io.cellery.observability</groupId>
    <artifactId>io.cellery.observability.parent</artifactId>
    <name>Cellery Observability</name>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <modules>
        <module>components</module>
        <module>docker</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.google.protobuf</groupId>
                <artifactId>protobuf-java</artifactId>
                <version>${protobuf.java.version}</version>
            </dependency>
            <dependency>
                <groupId>io.grpc</groupId>
                <artifactId>grpc-core</artifactId>
                <version>${grpc.core}</version>
            </dependency>
            <dependency>
                <groupId>io.grpc</groupId>
                <artifactId>grpc-netty</artifactId>
                <version>${grpc.netty}</version>
                <exclusions>
                    <exclusion>
                        <groupId>*</groupId>
                        <artifactId>*</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>io.cellery.observability</groupId>
                <artifactId>gogoproto-java</artifactId>
                <version>${gogoproto.orbit.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <properties>

        <!--Start of Orbit bundle dependency versions-->
        <protobuf.java.version>3.6.1</protobuf.java.version>
        <grpc.core>1.15.0</grpc.core>
        <grpc.netty>1.15.0</grpc.netty>
        <gogoproto.orbit.version>0.1.0-celleryv1</gogoproto.orbit.version>
        <!-- End of Orbit bundle dependency versions-->

    </properties>
</project>
